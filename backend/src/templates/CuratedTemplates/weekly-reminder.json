{
  "trigger": "schedule.every_monday_9am",
  "triggerParams": {
    "triggerTimes": {
      "item": [
        {
          "mode": "custom",
          "cronExpression": "0 9 * * 1"
        }
      ]
    }
  },
  "actions": [
    {
      "action": "gmail.send_email",
      "params": {
        "to": "me@example.com",
        "subject": "Weekly Reminder",
        "message": "This is your scheduled Monday 9AM email."
      },
      "mode": "sequential"
    }
  ]
}
