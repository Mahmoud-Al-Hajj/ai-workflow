{
  "trigger": "shopify.new_order",
  "actions": [
    {
      "action": "slack.post_message",
      "params": {
        "channel": "#orders",
        "message": "New Shopify order received: {{$json.order_number}} for {{$json.customer.first_name}} {{$json.customer.last_name}}."
      },
      "mode": "sequential"
    }
  ]
}
