{
  "trigger": "webhook.new_lead",
  "actions": [
    {
      "action": "gmail.send_email",
      "params": {
        "to": "lead@example.com",
        "subject": "Welcome!",
        "message": "Thanks for your interest!"
      },
      "mode": "parallel"
    },
    {
      "action": "slack.post_message",
      "params": {
        "channel": "#sales",
        "message": "New lead received"
      },
      "mode": "parallel"
    },
    {
      "action": "delay.wait",
      "params": {
        "duration": "2h"
      },
      "mode": "sequential"
    },
    {
      "action": "gmail.send_email",
      "params": {
        "to": "lead@example.com",
        "subject": "Follow-up",
        "message": "How can we help you further?"
      },
      "mode": "sequential"
    }
  ]
}
