{
  "trigger": "schedule.trigger",
  "triggerParams": {
    "cron": "0 7 * * *"
  },
  "actions": [
    {
      "action": "httprequest.fetch_sales",
      "params": {
        "url": "https://api.sales.com/daily",
        "method": "GET"
      },
      "mode": "sequential"
    },
    {
      "action": "function.transform_data",
      "params": {
        "code": "return items.map(item => ({ json: { revenue: item.json.total * 1.2 } }));"
      },
      "mode": "sequential"
    },
    {
      "action": "googlesheets.insert",
      "params": {
        "sheetId": "sales_data"
      },
      "mode": "sequential"
    },
    {
      "action": "gmail.send_email",
      "params": {
        "to": "reports@example.com",
        "subject": "Daily Sales Report",
        "message": "Sales data updated in Google Sheets."
      },
      "mode": "parallel"
    },
    {
      "action": "slack.post_message",
      "params": {
        "channel": "#sales",
        "message": "Daily sales report is available in Google Sheets."
      },
      "mode": "parallel"
    }
  ]
}
