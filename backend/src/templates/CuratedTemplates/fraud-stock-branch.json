{
  "trigger": "webhook.received",
  "actions": [
    {
      "action": "if.check_fraud",
      "params": {
        "conditions": {
          "leftValue": "={{ $json.fraud_score }}",
          "rightValue": 0.8,
          "operator": { "type": "number", "operation": "gt", "singleValue": true }
        }
      },
      "mode": "sequential"
    },
    {
      "action": "slack.send_alert",
      "params": {
        "channel": "#fraud-alerts",
        "message": "Fraud detected for order {{$json.order_id}}"
      },
      "mode": "branch_true"
    },
    {
      "action": "if.stock_low",
      "params": {
        "conditions": {
          "leftValue": "={{ $json.stock_level }}",
          "rightValue": 10,
          "operator": { "type": "number", "operation": "lt", "singleValue": true }
        }
      },
      "mode": "branch_false"
    },
    {
      "action": "gmail.send_email",
      "params": {
        "to": "supplier@example.com",
        "subject": "Low Stock Alert",
        "message": "Stock is low for product {{$json.product_id}}"
      },
      "mode": "branch_true"
    },
    {
      "action": "airtable.update_inventory",
      "params": {
        "table": "inventory",
        "fields": { "product_id": "{{$json.product_id}}", "stock": "{{$json.stock_level}}" }
      },
      "mode": "branch_false"
    }
  ]
}
