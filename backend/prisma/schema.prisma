generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   // User's full name
  email     String   @unique
  password  String
  n8nUrl    String   // User's n8n instance URL
  n8nApiKey String   // User's n8n API key
  workflows Json[]   // Stores workflows as JSON
  createdAt DateTime @default(now())
}